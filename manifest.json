{
  "manifest_version": 3,
  "name": "Accessibility Tree Extension",
  "version": "1.0",
  "description": "A Chrome extension to access and display the accessibility tree.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "debugger",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "purpleA11yLogo.png"
  }, 
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js","getClickableItems.js","scanningProcess.js"],
      "css":["style.css"]
    }
  ]

}
